@model IEnumerable<RkaaAVLS.Models.Entites.SubOrganization>

@{
    ViewBag.Title = "نمایندگی ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("ایجاد", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MainOrganization.MainOrganName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubOrganName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubOrgManagerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SunOrgManagerTel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MainOrganization.MainOrganName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubOrganName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubOrgManagerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SunOrgManagerTel)
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id=item.SubOrganID }) |
