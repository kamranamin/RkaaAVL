@model IEnumerable<RkaaAVLS.Models.Entites.Role>

@{
    ViewBag.Title = "نقش ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("ایجاد", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id=item.RoleId }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.RoleId })
        </td>
    </tr>
}

</table>
